{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
<article class="{{post_class}}">
    <section class="post-excerpt">
        <p><span class="post-title"><a href="{{url}}">{{{title}}}</a></span>{{excerpt words="50"}}<a class="read-more" href="{{url}}"> &raquo;</a></p>
    </section>
    <section class="post-meta">
        <span><time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time></
        span>
        {{#if tags}}
        <span class="dot"></span>
        <span class="post-tags-loop">{{tags separator="  Â·  "}}</span>
        {{/if}}
    </section>
</article>
{{/foreach}}

